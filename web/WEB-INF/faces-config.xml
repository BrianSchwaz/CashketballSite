<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"> 
    <managed-bean>
        <managed-bean-name>selector</managed-bean-name>
        <managed-bean-class>items.Selector</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
     <managed-bean>
        <managed-bean-name>util</managed-bean-name>
        <managed-bean-class>items.Util</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>   
    <managed-bean>
        <managed-bean-name>login</managed-bean-name>
        <managed-bean-class>items.Login</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>newlogin</managed-bean-name>
        <managed-bean-class>items.NewLogin</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>  
    <managed-bean>
        <managed-bean-name>playerListBean</managed-bean-name>
        <managed-bean-class>items.PlayerListBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>login</property-name>
            <value>#{login}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>recentSeason</managed-bean-name>
        <managed-bean-class>items.TableRow</managed-bean-class>
    
        <managed-bean-scope>session</managed-bean-scope></managed-bean>
    <managed-bean>
        <managed-bean-name>chartView</managed-bean-name>
        <managed-bean-class>items.ChartView</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>teamDropdown</managed-bean-name>
        <managed-bean-class>items.TeamDropdown</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>menuView</managed-bean-name>
        <managed-bean-class>items.MenuView</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>
            /index.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/yourRoster.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>create</from-outcome>
            <to-view-id>/createLogin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /createLogin.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /yourRoster.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /opponentRoster.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /players.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>
            /predictions.xhtml
        </from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>